pkgname=cloudsn
pkgver=0.7.4
pkgrel=2
pkgdesc="E-mail (pop3, gmail, imap), rss, and tweets notifier"
arch=('any')
url="http://chuchiperriman.github.com/cloud-services-notifications/"
license=('GPL')
depends=('python-notify' 'python-simplejson' 'pyxdg' 'pygtk' 'gnome-python' 'hicolor-icon-theme')
install=cloudsn.install
source=($pkgname-$pkgver.tar.gz::http://github.com/chuchiperriman/cloud-services-notifications/tarball/$pkgver)
md5sums=('bcce84c185f597d04f5e217f29aab13a')

build() {
  cd $srcdir/chuchiperriman-cloud-services-notifications-*

  python setup.py install --root=$pkgdir --prefix=/usr
}

